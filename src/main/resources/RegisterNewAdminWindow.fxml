                </padding>
            </Label>

            <TextField fx:id="nameField" focusTraversable="false" prefHeight="30.0" prefWidth="220.0" promptText="Name" style="-fx-background-color: #CFFCFB; -fx-background-radius: 5;" />
            <TextField fx:id="emailField" focusTraversable="false" prefHeight="30.0" prefWidth="220.0" promptText="Email" style="-fx-background-color: #CFFCFB; -fx-background-radius: 5;" />
