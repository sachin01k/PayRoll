<AnchorPane prefHeight="620.0" prefWidth="980.0" style="-fx-background-color: #BDDDE1;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Infotrixs.Payroll_System.PayrollUI.RegisterNewAdminController">

